<odoo>
    <record id="view_account_journal_tree_inherit2" model="ir.ui.view">
        <field name="name">view_account_journal_tree_inherit2</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="is_card_journal"/>
            </field>
            <notebook position="inside">
                <page name="card_accounts" string="Card Settings" attrs="{'invisible': [('is_card_journal', '=', False)]}">
                    <group>
                        <field name="card_debit_account" attrs="{'invisible': [('is_card_journal', '=', False)]}"/>
                        <field name="card_credit_account" attrs="{'invisible': [('is_card_journal', '=', False)]}"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
