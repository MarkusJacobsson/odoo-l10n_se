<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">account settings inherited l10n_se_account_payment_order</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('app_settings_block')]/div[@id='invoicing_settings']" position="after">
                    <h2>Account Payment Order</h2>
                    <div class="row mt16 o_settings_container" name="account_payment_order">
                        <div class="col-12 col-lg-6 o_setting_box" id="payment_account_ids">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="payment_account_ids"/>
                                <div class="mt8">
                                    <field name="payment_account_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="nix_payment_account_ids">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="nix_payment_account_ids"/>
                                <div class="mt8">
                                    <field name="nix_payment_account_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
